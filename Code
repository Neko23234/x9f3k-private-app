<body><h1>Meine Liste</h1><div class="list" id="list">
  <div class="item">
    <input type="checkbox">
    <input type="text" placeholder="Text eingeben">
  </div>
</div><button onclick="addItem()">+ Neue Zeile</button>

<script>
  function addItem() {
    const list = document.getElementById('list');
    const item = document.createElement('div');
    item.className = 'item';

    item.innerHTML = `
      <input type="checkbox">
      <input type="text" placeholder="Text eingeben">
    `;

    list.appendChild(item);
  }
</script></body>
